	email = einarhaaland98@gmail.com

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[init]
    defaultBranch = main

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[push]
    default = simple
    autoSetupRemote = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[commit]
    verbose = true

[core]
    excludesfile = ~/.gitignore

[rebase]
    autoSquash = true

